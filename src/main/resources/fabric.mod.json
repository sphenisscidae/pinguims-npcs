{
	"schemaVersion": 1,
	"id": "pinguims-npcs",
	"version": "${version}",
	"name": "Pinguim's NPCs",
	"description": "This is an example description! Tell everyone what your mod is about!",
	"authors": [
		"Me!"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/pinguims-npcs/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "com.pinguimarmado.PinguimsNPCs",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "com.pinguimarmado.PinguimsNPCsClient",
				"adapter": "kotlin"
			}
		],
		"fabric-datagen": [
			{
				"value": "com.pinguimarmado.PinguimsNPCsDataGenerator",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"pinguims-npcs.mixins.json",
		{
			"config": "pinguims-npcs.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}